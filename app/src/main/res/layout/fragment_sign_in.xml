<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UserFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Inscription"
        android:textColor="@color/bleuFonce"
        android:textFontWeight="900"
        android:textSize="36dp"

        android:layout_marginBottom="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <EditText
                android:id="@+id/editTextPseudoSigin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_ic_user"
                android:drawablePadding="12dp"
                android:hint="Pseudo"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:id="@+id/editTextEmailSigin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_ic_sms"
                android:drawablePadding="12dp"

                android:hint="Email"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:id="@+id/editTextPasswordSigin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"

                android:drawableStart="@drawable/custom_ic_lock"
                android:drawablePadding="12dp"
                android:fontFamily="@font/avenir"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/bleuFonce" />

            <EditText
                android:id="@+id/editTextPasswordConfirmSigin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"

                android:drawableStart="@drawable/custom_ic_lock"
                android:drawablePadding="12dp"
                android:fontFamily="@font/avenir"
                android:hint="Confirmer Mot de passe"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/bleuFonce" />

            <EditText
                android:id="@+id/editTextNumSigin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"

                android:drawableStart="@drawable/custom_ic_call"
                android:drawablePadding="12dp"
                android:fontFamily="@font/avenir"
                android:hint="Numero de téléphone"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/bleuFonce" />

            <CheckBox
                android:id="@+id/checkBoxPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="-60dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir"
                android:text="Professionnel"
                android:textSize="24dp" />

            <TableLayout
                android:id="@+id/proTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/topTableRowPro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    >

                </TableRow>

                <TableRow
                    android:id="@+id/middleTableRowPro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/midLinearLayoutPro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </TableRow>

            </TableLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ConnexionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/custom_button"
                android:padding="10dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="Valider"
                android:textAllCaps="false"
                android:textColor="@color/bleuClair"
                android:textFontWeight="900"
                android:textSize="28sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>